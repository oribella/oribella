{
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "aw -c aw.config.js",
    "website:install": "cd website && npm i",
    "website:start": "cd website && npm start",
    "website:build": "cd website && npm run build",
    "website:publish": "cd website && npm run publish-gh-pages"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@after-work.js/aw": "6.0.14",
    "@types/chai": "4.3.20",
    "@types/jsdom": "16.2.15",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.52",
    "@types/sinon": "7.5.2",
    "@types/sinon-chai": "3.2.12",
    "chai": "4.5.0",
    "coveralls": "3.1.1",
    "globby": "11.1.0",
    "husky": "4.3.8",
    "jsdom": "16.7.0",
    "lerna": "3.22.1",
    "mocha": "7.2.0",
    "mocha-junit-reporter": "1.23.3",
    "nyc": "15.1.0",
    "prettier": "2.8.8",
    "pretty-quick": "2.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.79.2",
    "rollup-plugin-filesize": "6.2.1",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-typescript2": "0.36.0",
    "rollup-plugin-uglify": "6.0.4",
    "sinon": "9.2.4",
    "sinon-chai": "3.7.0",
    "ts-node": "8.10.2",
    "tslint": "6.1.3",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.9.10"
  },
  "workspaces": [
    "packages/framework",
    "packages/oribella"
  ],
  "name": "oribella"
}
